  +Long id
  +String name
  +String size
  +String packaging
  +LocalDateTime createdAt
  +LocalDateTime updatedAt
}

class Product {
  +Long id
  +String name
  +BigDecimal unitPrice
  +String unitOfMeasure
  +int stockAvailable
  +int minQuantity
  +int maxQuantity
